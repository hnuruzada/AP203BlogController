@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h3>Create Category Section</h3>
    <form method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Category Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="category" asp-action="index">

            <i style="font-size:0.875rem; text-decoration:none;" class="btn btn-dark">Back</i>
        </a>
    </form>
</div>
